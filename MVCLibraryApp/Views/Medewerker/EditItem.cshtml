@{
    ViewData["Title"] = "EditItem";
}

@model MVCLibraryApp.Models.ItemModel

<h2>Edit Item</h2>

<form method="post">
    <input type="hidden" asp-for="ID" />

    <label for="Titel">Title:</label>
    <input id="Titel" asp-for="Titel" />

    <label for="AuteurID">Author ID:</label>
    <input id="AuteurID" asp-for="AuteurID" />

    <label for="Publicatiejaar">Publication Year:</label>
    <input id="Publicatiejaar" asp-for="Publicatiejaar" />

    <label for="Status">Status:</label>
    <input id="Status" asp-for="Status" />

    <label for="LocatieID">Location ID:</label>
    <input id="LocatieID" asp-for="LocatieID" />

    <button type="submit">Save</button>
</form>
