@model MVCLibraryApp.Models.LocatieModel

@{
    ViewData["Title"] = "DeleteLocatie";
}

<div class="container mt-3">
    <h1>Delete</h1>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>LocatieModel</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Beschrijving)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Beschrijving)
            </dd>
        </dl>

        @if (Model.Items != null && Model.Items.Any())
        {
            <h5>Deleting this location will also delete all the items in it! Below are the associated items.</h5>
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Title</th>
                        <th>Author ID</th>
                        <th>Location</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.Titel</td>
                            <td>@item.AuteurID</td>
                            <td>@item.Locatie.Beschrijving</td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        <form asp-action="DeleteLocatieConfirmed">
            <input type="hidden" asp-for="ID" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="IndexLocatie">Back to List</a>
        </form>
    </div>
</div>
