@{
    ViewData["Title"] = "Dashboard";
}

<style>
     .fancy-font {
         font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* A more readable fancy font */
         text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
         color: #FFFFFF; /* White text for better contrast against vibrant colors */
         width: calc(50% - 5%); /* Two buttons will fill the width, with 2.5% margin on either side */
         height: 200px; /* Adjust to the size of your hand palm */
         padding: 20px; /* Added padding for better aesthetics */
         box-sizing: border-box; /* Ensures padding and border are included in element's total width and height */
         display: flex; /* Aligns text in the center, both vertically and horizontally */
         justify-content: center;
         align-items: center;
         text-align: center;
         border-radius: 0; /* No rounded corners for buttons */
         margin-bottom: 2.5%;
     }

     .btn-primary {
         background-color: #ff6347; /* Vibrant Tomato color */
         border-color: #ff6347;
     }

     .btn-success {
         background-color: #32cd32; /* Vibrant LimeGreen color */
         border-color: #32cd32;
     }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Dashboard</h1>

    <div class="d-flex flex-wrap justify-content-between align-items-center mt-4">
        <!-- Stylished Buttons to Other Views -->
        <a class="btn btn-primary btn-lg fancy-font" asp-action="IndexItem" asp-controller="Medewerker">Index Item</a>
        <a class="btn btn-primary btn-lg fancy-font" asp-action="IndexAuthor" asp-controller="Medewerker">Index Auteur</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="LeningenBeheer" asp-controller="Medewerker">Leningen Beheer</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexBezoeker" asp-controller="Medewerker">Bezoeker Accounts Beheer</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexFactuur" asp-controller="Medewerker">Factuur Inzien</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexAbonnement" asp-controller="Medewerker">Abonnementen beheren</a>
    </div>
</div>
