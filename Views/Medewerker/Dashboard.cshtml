@{
    ViewData["Title"] = "Dashboard";
}

<style>
    .fancy-font {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* More readable fancy font */
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
        border-radius: 0px; /* Removed border-radius for squared-off buttons */
        width: 45%;
        margin: 2.5%;
        display: block; /* Block display to align 2 buttons per line */
        box-sizing: border-box; /* Ensures padding doesn't increase button size */
    }

    .btn-primary {
        background-color: #007bff; /* Modify to your desired primary color */
        border-color: #007bff; /* Modify to your desired primary color */
    }

    .btn-success {
        background-color: #28a745; /* Modify to your desired success color */
        border-color: #28a745; /* Modify to your desired success color */
    }
</style>

<div class="container mt-5">
    <h1 class="text-center mb-4">Dashboard</h1>

    <div class="d-flex flex-wrap justify-content-between align-items-center mt-4">
        <!-- Stylished Buttons to Other Views -->
        <a class="btn btn-primary btn-lg fancy-font" asp-action="IndexItem" asp-controller="Medewerker">Index Item</a>
        <a class="btn btn-primary btn-lg fancy-font" asp-action="IndexAuthor" asp-controller="Medewerker">Index Auteur</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="LeningenBeheer" asp-controller="Medewerker">Leningen Beheer</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexBezoeker" asp-controller="Medewerker">Bezoeker Accounts Beheer</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexFactuur" asp-controller="Medewerker">Factuur Inzien</a>
        <a class="btn btn-success btn-lg fancy-font" asp-action="IndexAbonnement" asp-controller="Medewerker">Abonnementen beheren</a>
    </div>
</div>
