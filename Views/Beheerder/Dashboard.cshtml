@{
    ViewData["Title"] = "Dashboard";
}

    <p>
           <a asp-area="" asp-controller="Beheerder" asp-action="Create">Add a new user</a>
                            </p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Email</th>
            <th>Membership status</th>
            <th>Phonenumber</th>
            <th>Changes</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bezoeker in ViewBag.Bezoekers)
        {
            <tr>
                <td>@bezoeker.Naam</td>
                <td>
                    @foreach (var rol in ViewBag.Rol[bezoeker.Id])
                    {
                        @rol
                    }
                </td>
                <td>@bezoeker.Email</td>
                <td>@bezoeker.PhoneNumber </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = bezoeker.Id })
                    @Html.ActionLink("Delete", "Delete", new { id = bezoeker.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
