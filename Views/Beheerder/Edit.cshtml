@model MVCLibraryApp.Models.BezoekerModel

<h2>Edit User</h2>

@using (Html.BeginForm("Edit", "Beheerder", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Naam, "Name")
        @Html.TextBoxFor(model => model.Naam, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

<div class="form-group">
    <label for="SelectedRole">Role</label>
    @Html.DropDownList("SelectedRole", (SelectList)ViewBag.Roles, new { @class = "form-control" })
</div>


    <div class="form-group">
        @Html.LabelFor(model => model.PhoneNumber, "Phonenumber")
        @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "form-control" })
    </div>

    <input type="submit" value="Update user" class="btn btn-primary" />
}