@model MVCLibraryApp.Models.RegisterModel

<h2>Create New User</h2>

@using (Html.BeginForm("Create", "Beheerder", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Naam)
        @Html.TextBoxFor(model => model.Naam, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Email)
        @Html.TextBoxFor(model => model.Email, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedRole)
        @Html.DropDownListFor(model => model.SelectedRole, ViewBag.Roles as SelectList, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Password)
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ConfirmPassword)
        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
    </div>

    <input type="submit" value="Create" class="btn btn-primary" />
}

