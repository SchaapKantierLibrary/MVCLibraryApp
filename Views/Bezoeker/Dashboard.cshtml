@{
    ViewData["Title"] = "Dashboard";
}

<div class="my-4">
    <h2>Where are you?</h2>
    <form method="post" action="@Url.Action("Dashboard", "Home")">
        <select id="locationDropdown" class="form-control" name="locationId">
            @foreach (var location in ViewBag.Locations)
            {
                <option value="@location.ID">@location.Beschrijving</option>
            }
        </select>
        <button type="submit" class="btn btn-primary">Show Items</button>
    </form>
</div>

@if (ViewBag.Items != null && ViewBag.Items.Count() > 0)
{
    <h2>Items:</h2>
    <ul>
        @foreach (var item in ViewBag.Items)
        {
            <li>@item.Titel</li>
        }
    </ul>
}
